# Пример конфигурации Nginx для armax-logistics
# Скопируйте этот файл в /etc/nginx/sites-available/ и адаптируйте под свои нужды

server {
    listen 80;
    listen [::]:80;
    server_name armax-logistics.com www.armax-logistics.com;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name armax-logistics.com www.armax-logistics.com;

    # SSL certificates (замените на ваши пути)
    ssl_certificate /etc/letsencrypt/live/armax-logistics.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/armax-logistics.com/privkey.pem;

    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Root directory
    root /var/www/armax-logistics/dist;
    index index.html;

    # Security headers
    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/javascript application/xml+rss application/json image/svg+xml;

    # Static assets caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|webp|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Video files caching
    location /video/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Main location - SPA fallback
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Robots.txt and sitemap.xml
    location = /robots.txt {
        allow all;
        access_log off;
    }

    location = /sitemap.xml {
        allow all;
        access_log off;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}


